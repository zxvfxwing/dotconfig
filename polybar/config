[colors]
background = #222
background-alt = #444
foreground = #ffffff
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/ezbar]
#monitor = ${env:MONITOR:DisplayPort-0}
bottom = false
width = 100%
height = 27
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = ${colors.foreground}
border-size = 0
border-color = #333333
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1
font-0 = Hack:fontformat=truetype:size=9;1
font-1 = Hack:fontformat=truetype:size=9;1
font-2 = FontAwesome:fontformat=truetype:size=9;1
modules-left = i3 xwindow
modules-center = spotify
modules-right = xkeyboard amddpm cpu coretemps memory redshift pkg volume date powermenu
tray-detached = false
tray-position = none
tray-padding = 1
tray-transparent = false
tray-background = ${colors.background}
tray-maxsize = 18
;wm-restack = i3
;override-redirect = true
click-left =
click-middle =
click-right =
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
double-click-left =
double-click-middle =
double-click-right =

[module/xwindow]
type = internal/xwindow
label-maxlen = 35
label-padding = 0
label-foreground = ${colors.foreground}

[module/xkeyboard]
type = internal/xkeyboard
; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock
format = <label-indicator>
format-spacing = 0
format-prefix = 
format-prefix-padding = 1
format-prefix-background = #ff665b
label-indicator = %name%
label-indicator-padding-right = 1
label-indicator-background = #ff665b

[module/filesystem]
type = internal/fs
mount-0 = /
mount-1 = /home
interval = 10
fixed-values = true
spacing = 1
format-mounted = <label-mounted>
label-mounted = %mountpoint%:%free%

[module/pkg]
type = custom/script
interval = 60
format = <label>
;format-underline = #6492fc
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
exec = /home/spoken/.config/polybar/pkg.sh
click-left = exec gnome-terminal -- yaourt -Syyuua --noconfirm

[module/coretemps]
type = custom/script
interval = 1
exec-if = sensors
exec = ~/.config/polybar/tempcores.sh

[module/vpncheck]
type = custom/script
exec = pgrep openvpn
interval = 5
label = vpn
format-underline = #268bd2
format-prefix = " "
format-prefix-foreground = #5b

[module/redshift]
type = custom/script
interval = 5
exec = ~/.config/polybar/redshift.sh

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh
click-left = playerctl -p spotify play-pause
tail = true
interval = 0.5
label = %output:0:40:...%
format-padding = 1
format-foreground = ${colors.foreground}

[module/amddpm]
type = custom/script
interval = 0.5
exec = ~/.config/polybar/amddpm.sh
click-left = ~/.config/polybar/amddpm.sh 1

[module/i3]
type = internal/i3
pin-workspaces = false
strip-wsnumbers = false
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = false
reverse-scroll = true
fuzzy-match = true

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 0;
ws-icon-default =

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 1
label-mode-foreground = #00ffbb

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon% %name%
label-focused = %index%
label-focused-background = #3f3f3f
label-focused-underline = #fba922
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2
;label-unfocused-underline = #fba922

label-visible = %index%
label-visible-underline = #ed7200
label-visible-padding = 2

label-urgent = %index%
label-urgent-background = #b88fbf
label-urgent-underline = #fba922
label-urgent-padding = 2

