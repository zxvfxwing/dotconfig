[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0
format-connected-underline = ${colors.foreground}
format-connected-prefix =
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %ip%%
format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}


[module/networkspeedup]
type = internal/network
interface = enp0s31f6
label-connected = "%upspeed:0%"
format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = #5bc2d3

[module/networkspeeddown]
type = internal/network
interface = enp0s31f6
label-connected = "%linkspeed%"
;"%downspeed:0%"
format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = #ad2424

[module/date]
type = internal/date
interval = 0.5
date = %d-%m-%Y
date-alt =
time = %T
time-alt = %s
format-prefix = 
format-prefix-foreground = ${colors.foreground}
;format-underline = #fcdbbf
format = <label>
label-padding-left = 1
label = %date% %time%

[module/volume]
type = internal/volume
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
mapping = true
interval = 0.2
click-left = none
format-volume = <ramp-volume> <label-volume>
label-volume-foreground = ${root.foreground}
format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
;label-muted =  muted
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
ramp-headphones-1 = 

[module/powermenu]
type = custom/menu
format-spacing = 1
label-open-padding-right = 1
label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}
menu-0-0 =  close
menu-0-0-exec = menu-open-1
menu-0-1 =  reboot
menu-0-1-exec = menu-open-2
menu-0-2 =  shutdown
menu-0-2-exec = menu-open-3
menu-0-2-padding-right = 1
menu-1-0 =  close
menu-1-0-exec = i3-msg exit, mode "default"
menu-1-0-padding-right = 1
menu-2-0 =  reboot
menu-2-0-exec = systemctl reboot
menu-2-0-padding-right = 1
menu-3-0 =  shutdown
menu-3-0-exec = systemctl poweroff -i
menu-3-0-padding-right = 1

